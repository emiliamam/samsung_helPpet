<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frameLayout_more_card"
    tools:context=".more_card_item">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:id="@+id/more_image"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:orientation="vertical">
            <TextView
                android:textColor="@color/black"
                android:id="@+id/text_name"
                android:textSize="23dp"
                android:fontFamily="@font/merriweatherregular"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_height="match_parent"
                android:text="@string/hello_blank_fragment" />


        <TextView
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/sourcesanssroregular"
            android:id="@+id/text_street"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/hello_blank_fragment"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"


            android:orientation="horizontal">
            <Button
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:id="@+id/but_for_chat"
                android:fontFamily="@font/sourcesanssroregular"
                android:background="@drawable/button"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="Связаться"
                android:textSize="18dp"
                android:layout_marginStart="20dp"/>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:id="@+id/favorite"
                android:background="@drawable/ic_baseline_favorite_border_24"
                android:layout_marginStart="30dp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>