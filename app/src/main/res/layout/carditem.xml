<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="470dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="100dp"

>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C4C4C4"

        >

        <ImageView
            android:id="@+id/im_card"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="#C4C4C4" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_card_item"
        android:textColor="@color/white"
        android:layout_below="@id/im_card"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:gravity="left"/>
        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:id="@+id/street"
            android:textColor="@color/white"
            android:layout_below="@id/text_card_item"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:gravity="left"/>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@id/street"
            android:layout_marginTop="80dp"
            >
            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="left">
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/visibility"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Просмотрено" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="right"
                   >
                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/heart"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="В избранное"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>

