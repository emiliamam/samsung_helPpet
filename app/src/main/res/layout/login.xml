<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/verh_blue"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:src="@drawable/verh_blue"
        android:layout_marginTop="-10dp"/>

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verh_blue"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:text="Вход в систему"
        android:textColor="#21214A"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:text="Email"
        android:textColor="#717171"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="Пароль"
        android:layout_marginStart="30dp"
        android:textColor="#717171"
        android:textSize="18sp" />

    <Button
        android:id="@+id/but_log"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/button"
        android:layout_centerInParent="true"
        android:layout_below="@id/password"
        android:layout_marginTop="30dp"
        android:text="Войти"/>

    <Button
        android:id="@+id/forget_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/but_log"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background=""
        android:text="Забыли пароль?"
        android:textColor="#21214A"
        android:textSize="13sp" />
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/forget_pass"
        android:layout_marginTop="25dp"

        android:layout_centerInParent="true"
        android:orientation="horizontal">
            <TextView

             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:text="Нет аккаунта?"

             />
        <Button
            android:id="@+id/registr"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Зарегиcтрироваться"
            android:gravity="right"
            android:background=""
            android:textColor="#717171"
            android:textSize="12sp"



        />

    </LinearLayout>
</RelativeLayout>