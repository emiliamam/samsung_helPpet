<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/im"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#21214A"/>
    <ImageView
        android:id="@+id/verh_blue"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/im"
        android:layout_marginTop="-10dp"
        android:background="@drawable/ic_wave__5_"
        android:rotation="180"/>

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verh_blue"
        android:layout_centerInParent="true"
        android:layout_marginTop="-50dp"
        android:text="Вход в систему"
        android:textColor="#21214A"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textColor="#717171"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/wrong_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_centerInParent="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="-10dp"
        android:text="Введите email"
        android:textColor="#FF0000" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:textColor="#717171"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/wrong_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_centerInParent="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="-10dp"
        android:text="Введите пароль"
        android:textColor="#FF0000" />
    <TextView
        android:id="@+id/wrong_password2"
        android:layout_width="match_parent"
        android:textColor="#FF0000"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_centerInParent="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="-10dp"
        android:text="Пароль должен содержать не менее 8 символом"
        />

    <Button
        android:id="@+id/but_log"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@id/password"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:text="Войти"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/something_wrong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/but_log"
        android:layout_centerInParent="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Неккоректно введены данные"

        android:textColor="#FF0000" />

    <TextView
        android:id="@+id/forget_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/but_log"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:text="Забыли пароль?"
        android:textColor="#21214A"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/forget_pass"
        android:layout_marginTop="25dp"

        android:layout_centerInParent="true"
        android:orientation="horizontal">
            <TextView

             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:text="Нет аккаунта?"

             />
        <TextView
            android:id="@+id/registr"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Зарегиcтрироваться"
            android:gravity="right"
            android:textColor="#717171"
            android:textSize="14sp"
        />

    </LinearLayout>
</RelativeLayout>