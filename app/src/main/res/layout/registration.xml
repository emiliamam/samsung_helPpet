<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/im"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#21214A"/>
    <ImageView
        android:id="@+id/verh_blue"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/im"
        android:layout_marginTop="-10dp"
        android:background="@drawable/ic_wave__5_"
        android:rotation="180"/>

    <TextView
        android:id="@+id/registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verh_blue"
        android:layout_centerInParent="true"
        android:layout_marginTop="-50dp"
        android:text="Регистрация"
        android:textColor="#21214A"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/name_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registration"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:maxLines="1"
        android:hint="Имя"
        android:textColor="#717171"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/wrong_name"
        android:textColor="#FF0000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_reg"
        android:text="Введите имя"
        android:layout_centerInParent="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="-10dp"
        />

    <EditText
        android:id="@+id/email_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_reg"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:textColor="#717171"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/wrong_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_reg"
        android:layout_centerInParent="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="-10dp"
        android:text="Введите email"
        android:textColor="#FF0000" />

    <EditText
        android:maxLines="1"
        android:id="@+id/pass_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_reg"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:hint="Пароль"
        android:textColor="#717171"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/wrong_password"
        android:layout_width="match_parent"
        android:textColor="#FF0000"
        android:layout_height="wrap_content"
        android:layout_below="@id/pass_reg"
        android:text="Введите пароль"
        android:layout_centerInParent="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="-10dp"
        />
    <TextView
        android:id="@+id/wrong_password2"
        android:layout_width="match_parent"
        android:textColor="#FF0000"
        android:layout_height="wrap_content"
        android:layout_below="@id/pass_reg"
        android:text="Пароль должен содержать не менее 8 символом"
        android:layout_centerInParent="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="-10dp"
        />

    <Button
        android:id="@+id/but_reg"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@id/pass_reg"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:text="Регистрация"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/something_wrong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/but_reg"
        android:layout_centerInParent="true"
        android:layout_marginStart="35dp"
        android:gravity="center"
        android:text="Неккоректно введены данные"

        android:textColor="#FF0000" />


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/but_reg"
        android:layout_marginTop="40dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal">
        <TextView

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Есть аккаунт?"

            />
        <TextView
            android:id="@+id/login"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Войти"
            android:gravity="right"
            android:textColor="#717171"
            android:textSize="15sp"


            />

    </LinearLayout>
</RelativeLayout>